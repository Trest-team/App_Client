<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="activity"
            type="com.example.pigo_app_client.ui.main.MainActivity" />

        <variable
            name="vm"
            type="com.example.pigo_app_client.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_mainActivity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="com.example.pigo_app_client.ui.main.fragment.HomeFragment"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView_mainActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.bottomnavigation.BottomNavigationView style="@style/BottomNavigation"
            android:id="@+id/bottomNavigationView_mainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/banv_menu"
            app:itemIconSize="30dp"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
